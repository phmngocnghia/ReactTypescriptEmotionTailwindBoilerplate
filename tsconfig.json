{
  "exclude": ["./src/types/"],
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es6", "dom"],
    "baseUrl": ".",
    "typeRoots": ["./src/types"],
    "types": ["globals"],
    "paths": {
      "@assets": ["./src/assets"],
      "@assets/*": ["./src/assets/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@docs": ["./src/docs"],
      "@docs/*": ["./src/docs/*"],
      "@services": ["./src/services"],
      "@services/*": ["./src/services/*"],
      "@store": ["./src/store"],
      "@store/*": ["./src/store/*"],
      "@styles": ["./src/styles"],
      "@styles/*": ["./src/styles/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"],
      "@/*": ["./src/*"]
    }
  }
}
